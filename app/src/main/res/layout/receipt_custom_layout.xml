<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="@dimen/vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/black_20"
                android:layout_margin="@dimen/paragraph_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/row_margin"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/row_margin"
                        android:text="20 min"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingEnd="@dimen/row_margin"
                        android:paddingStart="@dimen/row_margin"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_regular"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pelmeni"
                android:scaleType="centerCrop"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Pelmeni russian"
            android:textSize="@dimen/text_size_description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="@dimen/row_margin"
            android:paddingEnd="@dimen/row_margin"
            android:layout_marginTop="@dimen/row_margin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paragraph_margin"
            android:text="~20$"
            android:textAlignment="textEnd"
            android:paddingStart="@dimen/row_margin"
            android:paddingEnd="@dimen/row_margin"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>